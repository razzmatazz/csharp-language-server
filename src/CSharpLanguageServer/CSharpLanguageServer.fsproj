<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <Description>C# LSP language server</Description>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>csharp-ls</ToolCommandName>
    <Authors>Saulius Menkeviƒçius</Authors>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageId>csharp-ls</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>csharp;lsp;roslyn</PackageTags>
    <PackageProjectUrl>https://github.com/razzmatazz/csharp-language-server</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <Version>0.1.6</Version>
    <PackageVersion>0.1.6</PackageVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="RoslynHelpers.fs" />
    <Compile Include="Documentation.fs" />
    <Compile Include="Server.fs" />
    <Compile Include="Options.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argu" Version="6.1.1" />
    <PackageReference Include="ICSharpCode.Decompiler" Version="7.1.0.6543" />
    <PackageReference Include="Ionide.LanguageServerProtocol" Version="0.3.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />

    <PackageReference Include="Microsoft.Build.Locator" Version="1.4.1" />
    <PackageReference Include="Microsoft.CodeAnalysis" Version="4.0.0-6.final">
      <NoWarn>NU1604</NoWarn>
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.0.0-6.final">
      <NoWarn>NU1604</NoWarn>
      <NoWarn>NU1701</NoWarn>
    </PackageReference>
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Features" Version="4.0.0-6.final" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.0.0-6.final" />
    <PackageReference Include="Microsoft.CodeAnalysis.Features" Version="4.0.0-6.final" />
    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.MSBuild" Version="4.0.0-6.final" />
    <PackageReference Include="Microsoft.Build" Version="17.0.0" ExcludeAssets="runtime" />
    <PackageReference Include="Microsoft.Build.Framework" Version="17.0.0" ExcludeAssets="runtime" />
  </ItemGroup>
</Project>
