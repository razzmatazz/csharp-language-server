<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>CSharpLanguageServer.$(MSBuildProjectName)</AssemblyName>
    <Description>C# LSP language server</Description>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>csharp-ls-new</ToolCommandName>
    <Authors>Saulius Menkeviƒçius</Authors>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageId>csharp-ls</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>csharp;lsp;roslyn</PackageTags>
    <PackageProjectUrl>https://github.com/razzmatazz/csharp-language-server</PackageProjectUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <ChangelogFile>..\..\CHANGELOG.md</ChangelogFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Client.fs" />
    <Compile Include="Server.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FSharpPlus" Version="1.5.0"/>
    <PackageReference Include="Ionide.LanguageServerProtocol" Version="0.4.22" />
    <PackageReference Include="Serilog" Version="3.0.1" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.1.0" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../Common/Common.fsproj" />
    <ProjectReference Include="../Handlers/Handlers.fsproj" />
    <ProjectReference Include="../Workspace/Workspace.fsproj" />
    <ProjectReference Include="../Logging/Logging.fsproj" />
  </ItemGroup>

</Project>
